  },
  "homepage": "https://github.com/MarkLGershman/Cards#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.1",
    "express": "^4.17.1",
    "loglevel": "^1.6.3",
    "mongodb": "^3.2.7",
    "mongoose": "^5.7.5",
    "socket.io": "^2.5.0"
  },
  "devDependencies": {
    "eslint": "^6.0.1",
    "eslint-plugin-jest": "^22.7.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}